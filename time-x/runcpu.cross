#!/bin/sh
# Authored by Alexis Engelke
set -u

# will be empty for non-ELF files like #!.
MACH=$(readelf -h "$1" 2>/dev/null | grep "Machine:")
case "${MACH##*  }" in
    "RISC-V")
        exec "$HOME"/qemu-user-static/usr/bin/qemu-riscv64-static -- "$@";;
    "Advanced Micro Devices X86-64")
        exec "$@";;
    *)
        exec "$@";;
esac
